@model IEnumerable <EFWeb.Models.Category>

@{
    ViewBag.Title = "Listado de Categorias";
}

<h2>Listado de Categorias</h2>
<p>
    @Html.ActionLink("Nuevo Registro", "Create")
</p>

<table>
    <tr>
        <th>@Html.DisplayNameFor(model => model.description)</th>
        <th>@Html.DisplayNameFor(model => model.salesContact)</th>
        <th>@Html.DisplayNameFor(model => model.salesNumbers)</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.description)</td>
            <td>@Html.DisplayFor(modelItem => item.salesContact)</td>
            <td>@Html.DisplayFor(modelItem => item.salesNumbers)</td>
            <td>@Html.ActionLink("Ver Detalle",
               "Details",
               new { id = item.categoryID })</td>
            <td>
                <button type="button" class="btn btn-info btn-primary" 
                        data-toggle="modal"
                        data-target="#panelBusqueda">
                    Activar Busqueda
                </button>
            </td>
        </tr>
    }
</table>

<div id="panelBusqueda" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Titulo Busqueda Modal</h4>
            </div>
            <div class="modal-body">
                @Html.Partial("_Busqueda")
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">
                    Cerrar Ventana
                </button>
            </div>
        </div>
    </div>    
</div>
